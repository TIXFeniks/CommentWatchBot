{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES5",
		"declaration": false,
		"rootDir": "src",
		"allowJs":true,
		"types": [
            // add node as an option
            "node"
         ],
         // typeRoots option has been previously configured
         "typeRoots": [
            // add path to @types
            "node_modules/@types"
         ]
	},
	"include":[
		"src/*"
	]
}
